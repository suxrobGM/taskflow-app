{
  "name": "taskflow",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "build:orm": "tsc -p tsconfig.orm.json",
    "start": "next start",
    "lint": "next lint",
    "typeorm": "typeorm-ts-node-esm",
    "migration:apply": "npm run build:orm && npm run typeorm migration:run -- -d dist/DataSource.js",
    "migration:create": "npm run build:orm && npm run typeorm migration:generate -- -d dist/DataSource.js",
    "migration:revert": "npm run build:orm && npm run migration:revert -- -d dist/DataSource.js"
  },
  "dependencies": {
    "next": "14.2.3",
    "pg": "^8.11.5",
    "react": "^18",
    "react-dom": "^18",
    "reflect-metadata": "^0.2.2",
    "typeorm": "^0.3.20"
  },
  "devDependencies": {
    "@types/node": "^20",
    "@types/react": "^18",
    "@types/react-dom": "^18",
    "eslint": "^8",
    "eslint-config-next": "14.2.3",
    "postcss": "^8",
    "prettier": "^3.2.5",
    "tailwindcss": "^3.4.1",
    "ts-node": "^10.9.2",
    "typescript": "^5"
  }
}
